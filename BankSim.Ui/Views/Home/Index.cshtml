@{
    ViewData["Title"] = "Hoş Geldiniz | BankSim";
}

<div class="welcome-page d-flex align-items-center justify-content-center">
    <div class="welcome-card text-center p-5">
        <img src="https://cdn-icons-png.flaticon.com/512/2936/2936884.png"
             alt="BankSim Logo"
             width="80"
             class="mb-4 rounded-circle bg-light p-2 shadow-sm" />
        <h1 class="fw-bold mb-3" style="color:#003366;">BankSim’e Hoş Geldiniz</h1>
        <p class="mb-4" style="color:#00619a; font-size:1.15rem;">
            Güvenilir. Yenilikçi. Hızlı.<br>
            Dijital bankacılığın yeni dönemi BankSim’de!
        </p>
        <div class="d-flex justify-content-center gap-3 flex-wrap">
            <a href="/Login/Index" class="btn btn-lg rounded-pill px-4"
               style="background:#009ddc; color:#fff; font-weight:600;">
                Giriş Yap
            </a>
            <a href="/Register/Index" class="btn btn-lg rounded-pill px-4"
               style="background:#fff; color:#009ddc; border:2px solid #009ddc; font-weight:600;">
                Kayıt Ol
            </a>
        </div>
    </div>
</div>

<style>
    html, body {
        height: 100%;
        margin: 0;
    }

    body {
        background: linear-gradient(120deg, #f6fbff 0%, #bfe2f7 100%);
        background-size: cover;
        background-attachment: fixed;
    }

    .welcome-page {
        min-height: 100vh;
        width: 100%;
    }

    .welcome-card {
        background: #e0f2fb;
        border-radius: 1rem;
        max-width: 480px;
        width: 90%;
        box-shadow: 0 4px 30px rgba(0, 51, 102, 0.1);
        backdrop-filter: blur(5px);
    }

        .welcome-card img {
            background: #fff;
        }

    .btn:focus, .btn:active {
        box-shadow: none !important;
    }
</style>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
