<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BankSim.Ui</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BankSim.Ui.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script>
        window.API_BASE_URL = "https://localhost:7291"; 
    </script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light" style="background: #f6fbff; box-shadow: 0 2px 10px #00336613;">
            <div class="container">
                <a class="navbar-brand fw-bold d-flex align-items-center" href="/" style="font-size: 2rem; color: #003366;">
                    <img src="https://cdn-icons-png.flaticon.com/512/2936/2936884.png" width="40" class="me-2" style="filter: drop-shadow(0 2px 6px #00336633);" />
                    BankSim
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarBankSim" aria-controls="navbarBankSim" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navbarBankSim">
                    <ul class="navbar-nav mb-2 mb-lg-0 align-items-center gap-lg-3">
                        <li class="nav-item">
                            <a class="nav-link fw-semibold" href="/" style="color:#003366; font-size:1.13rem;">Anasayfa</a>
                        </li>
                   
                        <li class="nav-item d-none" id="userInfoLi">
                            <span class="nav-link fw-bold" style="color: #009ddc; font-size:1.1rem;">
                                <i class="bi bi-person-circle me-1"></i>
                                <span id="userNameSpan">Kullanıcı</span>
                            </span>
                        </li>
                        <li class="nav-item d-none" id="logoutLi">
                            <button type="button"
                                    onclick="logout()"
                                    class="btn rounded-pill fw-bold px-4 ms-lg-2"
                                    style="background:#ff4f4f; color:#fff; border:none; font-size:1.09rem;">
                                Çıkış Yap
                            </button>
                        </li>
                        <li class="nav-item d-none" id="loginLi">
                            <a class="btn rounded-pill fw-bold px-4 ms-lg-2"
                               href="/Login/Index"
                               style="background:#009ddc; color:#fff; border:none; font-size:1.09rem;">
                                Giriş Yap
                            </a>
                        </li>
                        <li class="nav-item d-none" id="registerLi">
                            <a class="btn rounded-pill fw-bold px-4 ms-lg-2"
                               href="/Register/Index"
                               style="background: #fff; color:#009ddc; border: 2px solid #009ddc; font-size:1.09rem;">
                                Kayıt Ol
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
       
        function parseJwt(token) {
            try {
                const base64Url = token.split('.')[1];
                const base64 = base64Url.replace(/-/g, '+').replace(/_/g, '/');
                const jsonPayload = decodeURIComponent(atob(base64).split('').map(function (c) {
                    return '%' + ('00' + c.charCodeAt(0).toString(16)).slice(-2);
                }).join(''));
                return JSON.parse(jsonPayload);
            } catch (e) { return null; }
        }
        function updateNavbar() {
            const token = sessionStorage.getItem('token');
            const loginLi = document.getElementById('loginLi');
            const registerLi = document.getElementById('registerLi');
            const logoutLi = document.getElementById('logoutLi');
            const userInfoLi = document.getElementById('userInfoLi');
            if (token) {
              
                if (loginLi) loginLi.classList.add('d-none');
                if (registerLi) registerLi.classList.add('d-none');
                if (logoutLi) logoutLi.classList.remove('d-none');
                if (userInfoLi) userInfoLi.classList.remove('d-none');
              
                let userName = "Kullanıcı";
                const jwt = parseJwt(token);
                if (jwt && (jwt.fullName || jwt.name || jwt.email)) {
                    userName = jwt.fullName || jwt.name || jwt.email;
                }
                document.getElementById('userNameSpan').innerText = userName;
            } else {
             
                if (loginLi) loginLi.classList.remove('d-none');
                if (registerLi) registerLi.classList.remove('d-none');
                if (logoutLi) logoutLi.classList.add('d-none');
                if (userInfoLi) userInfoLi.classList.add('d-none');
            }   
        }
     
        function logout() {
            sessionStorage.removeItem('token');
            window.location.href = '/Login/Index';
        }
        updateNavbar();
    </script>
</body>
</html>
