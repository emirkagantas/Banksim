@model BankSim.Ui.Models.TransactionDto
@{
    ViewData["Title"] = "Para Transferi";
    var hesaplar = ViewBag.Accounts as List<BankSim.Ui.Models.AccountDto>;
}
<h2>Para Transferi</h2>
@if (ViewBag.Mesaj != null)
{
    <div class="alert alert-info">@ViewBag.Mesaj</div>
}
<form method="post">
    <div>
        <label>Gönderen Hesap</label>
        <select name="FromAccountId" class="form-control">
            @if (hesaplar != null)
            {
                foreach (var h in hesaplar)
                {
                    <option value="@h.Id">@h.IBAN (@h.Balance @h.Currency)</option>
                }
            }
        </select>
    </div>
    <div>
        <label>Alıcı Hesap ID</label>
        <input name="ToAccountId" class="form-control" required />
    </div>
    <div>
        <label>Tutar</label>
        <input name="Amount" type="number" step="0.01" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-success mt-2">Transfer Et</button>
</form>
